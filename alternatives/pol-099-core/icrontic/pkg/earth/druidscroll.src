use uo;
use os;

program use_scroll(who, scroll)
    set_critical(1);
    if (scroll.amount)
        var SpellID := GetObjProperty(scroll, "SpellID");
	SpellID := Cint(SpellID);
        SubtractAmount(scroll, 1);
        Detach();
        SetObjProperty(who, "DruidOpts", "NOREGS");
        StartSpellEffect(who, SpellID);
    endif
    set_critical(0);
endprogram

